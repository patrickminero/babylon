<div class="container">
    <div class="row pt-5">
        <div class="col-12 col-md-10 col-lg-6 m-auto pt-5">
            <h3>Your messages</h3>
            <ul class="list-group">
                <% if !@provider_chats.empty? %>
                    <li class="list-group-item border-0 d-flex justify-content-between align-items-center">
                        <p>From</p>
                        <p>Last message</p>
                        <%# <span class="badge bg-primary rounded-pill">14</span> %>
                    </li>
                <% end %>
                <% @provider_chats.each do |chat| %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <%= link_to chat.provider.name, chatroom_path(chat.id) %> <%= chat.messages.last %>
                        <%# <span class="badge bg-primary rounded-pill">14</span> %>
                    </li>
                <% end %>
            </ul>
            <h3>Your provider account messages</h3>
            <ul class="list-group">
                <% if !@user_chats.empty? %>
                    <li class="list-group-item border-0 d-flex justify-content-between align-items-center">
                        <p class="mb-0">From</p>
                        <p class="mb-0">Last message</p>
                        <%# <span class="badge bg-primary rounded-pill">14</span> %>
                    </li>
                <% end %>
                <% @user_chats.each do |chat| %>
                    <li class="list-group-item d-flex justify-content-between border-top align-items-center">
                        <%= link_to chat.user.username, chatroom_path(chat.id) %> <%= chat.messages.last.content %>
                        <%# <span class="badge bg-primary rounded-pill">14</span> %>
                    </li>
                <% end %>
            </ul>
        </div>
    </div>
</div>
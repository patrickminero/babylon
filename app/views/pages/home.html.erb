<div class="container-fluid" data-controller="location">
  <div class="row home-container">
    <div class="col-12 md-6">
      <div class="brand-banner">
        <h1>Babylon</h1>
        <h2 class="display-1">Find services in your own language</h2>
        <%# <a href="/categories" class="btn btn-secondary ">Find professionals in your area</a> %>
        <div>
          <form novalidate="novalidate" class="simple_form search hide-location" data-location-target="form" action="/providers/all" accept-charset="UTF-8" method="get">
            <input name="utf8" type="hidden" value="&#x2713;" />
            <div class="search-form-control form-group" data-controller="algolia">
              <input class="form-control string required" type="text" name="query" id="search_query" placeholder="Look up services"/>
              <input class="form-control string mt-3" placeholder="Type your location" type="hidden" name="location" id="bar_address" data-location-target="location" data-algolia-target="location">
              <input type="hidden" name="latitude" data-location-target="latitudeInput">
              <input type="hidden" name="longitude" data-location-target="longitudeInput">
            </div>
            <button type="submit" class="btn btn-secondary col text-center">Search</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<% categories = ['Medical', 'Legal', 'Home-improvement', 'Translation', 'Accounting', 'Housing', 'Well-being'] %>

<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="">
      <% categories.each do |category| %>
        <a href="/products/<%= category %>" class="text-decoration-none">
          <div class="col-12 lg-6 category-card" style="background-image: url(https://source.unsplash.com/featured/?<%= category %>)">
            <div class="card-content">
              <h4><%= category %></h4>
            </div>
          </div>
        </a>
      <% end %>
      <a href="/providers" class="text-decoration-none">
          <div class="col-12 lg-6 category-card" style="background-image: url(https://loremflickr.com/320/240/meeting)">
            <div class="card-content">
              <h4>All</h4>
            </div>
          </div>
        </a>
      </div>
    </div>
  </div>
</div>